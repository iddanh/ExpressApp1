extends ../layout.jade

block content
	h1 #{user.name}
	ul
		li Email: #{user.email}
		li Age: #{user.age}
	p: a(href="/user/#{user.name}/edit") Edit user
	p: a(href="/user/#{user.name}/delete") Delete user
	if (isLoggedIn)
		p: a(href="/user/#{user.name}/upload") Upload photo
	br
	img(src="data:image/jpeg;base64,#{image}")
	p: a(href="/user") Back to all users